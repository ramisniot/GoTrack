<%= render partial:"/layouts/flash_message" %>

<%= form_tag(group_path(@group), method: :put) do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" id="group_id" name="id" value="<%= @group.id %>">

    <%= render partial: 'form_content', locals: { on_edit: true } %>

  <div class="new-fleet-form__actions">
    <%= submit_tag "Update Fleet", class: 'button button--primary button--large button--inline button--right' %>
    <%= link_to 'Cancel', groups_path, class: "button button--secondary button--inline button--right" %>
  </div>
<% end %>
